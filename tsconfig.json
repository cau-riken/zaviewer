{ 
    "compilerOptions": { 
      "target": "es5", 
      "module": "ES2020", 
      "moduleResolution": "node", 
      "lib": ["es6", "dom"],
      "sourceMap": true, 
      
      //https://www.typescriptlang.org/tsconfig#jsx
      "jsx": "react-jsx", 
      "strict": true, 
      "noImplicitReturns": true,
      "rootDir": "src",
      "outDir": "assets/js",
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }